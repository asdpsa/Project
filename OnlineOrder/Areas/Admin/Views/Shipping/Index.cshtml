
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-4">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Add new shipping</h3>
                </div>
                <div class="box-body">
                    <form action="" method="POST" role="form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="">Name :</label>
                            <input type="text" class="form-control" id="" name="name">
                        </div>
                        <div class="form-group">
                            <label for="">Price :</label>
                            <input type="text" class="form-control" id="" name="price">
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="panel-title">List of shipping</h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                </td>
                                <td>
                                    <form action="" method="POST" class="form-inline" role="form">
                                        <a href="">
                                            <i class="btn btn-xs btn-danger fa fa-edit"></i>
                                        </a>
                                        <button type="submit" class="btn btn-xs btn-warning fa fa-trash"></button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center">
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

