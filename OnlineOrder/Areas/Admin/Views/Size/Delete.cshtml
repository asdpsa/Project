@model OnlineOrder.Size
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}
<p class="error">@ViewBag.ErrorMessage</p>
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <div class="row">
                <div class="col-md-12">
                    <div class="container  col-md-5" style="">
                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <hr />
                            <dl class="dl-horizontal">
                                <table class="table table-bordered">
                                    <tr>
                                        <td>Size</td>
                                        <td>Price</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => modelItem.Size1) cm
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => modelItem.Price) VND
                                        </td>
                                    </tr>
                                </table>
                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions">
                                    <input type="submit" value="Delete" class="btn btn-xs btn-warning fa fa-trash" /> |
                                    <a href="@Url.Action("Index","Size")" class="btn btn-xs btn-primary">Back to List</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
